<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GoatVaultClient_v3.ViewModels"
             x:Class="GoatVaultClient_v3.EducationPage"
             x:DataType="vm:EducationPageViewModel"
             Title="EducationPage">
    <Grid>
        <WebView Source="{Binding HtmlSource}"/>
        
        <ActivityIndicator x:Name="LoadingSpinner"
                           IsRunning="{Binding IsLoading}"
                           IsVisible="{Binding IsLoading}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Color="Blue"/>
    </Grid>
</ContentPage>