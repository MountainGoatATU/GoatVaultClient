<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
    x:Class="GoatVaultClient_v3.Pages.NewPasswordPopup">

    <Border
        Padding="20"
        StrokeShape="RoundRectangle 20"
        WidthRequest="340"
        BackgroundColor="White"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <VerticalStackLayout Spacing="15">
            <Label Text="Create New Password" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />
            <Entry x:Name="DescriptionEntry" Placeholder="Description" />
            <Entry x:Name="UserNameEntry" Placeholder="User name" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

            <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                <Button Text="Cancel" Clicked="Cancel_Clicked" BackgroundColor="#ccc" TextColor="Black"/>
                <Button Text="Create" Clicked="Create_Clicked" BackgroundColor="#0078ff" TextColor="White" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
</mopups:PopupPage>
