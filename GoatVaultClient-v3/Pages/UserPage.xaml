<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoatVaultClient_v3.Pages.UserPage"
             Title="UserPage">
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="User Settings" FontSize="24" HorizontalOptions="Center"/>

        <Entry Text="{Binding UserName}" Placeholder="Username"/>
        <Entry Text="{Binding Email}" Placeholder="Email" Keyboard="Email"/>
        <Entry Text="{Binding MasterPassword}" Placeholder="Master Password" IsPassword="True"/>

        <Button Text="Save Changes" Command="{Binding SaveChangesCommand}" />

    </VerticalStackLayout>
</ContentPage>