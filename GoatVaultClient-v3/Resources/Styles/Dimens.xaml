    <Thickness x:Key="rSmall">8</Thickness>
    <Thickness x:Key="rMedium">16</Thickness>
    <Thickness x:Key="rLarge">24</Thickness>
    <!--Padding-->
    <Thickness x:Key="pContent">4</Thickness>
