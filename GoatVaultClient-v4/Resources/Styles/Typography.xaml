<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="GoatVaultClient_v4.Resources.Styles.Typography"
                    >

    <OnPlatform x:Key="MaterialRegularFont" x:TypeArguments="x:String">
        <On Platform="Android" Value="JetBrainsMonoRegular" />
        <On Platform="iOS" Value="JetBrainsMonoRegular" />
        <On Platform="WinUI" Value="JetBrainsMono-Regular.ttf#JetBrainsMono" />
    </OnPlatform>

    <OnPlatform x:Key="MaterialMediumFont" x:TypeArguments="x:String">
        <On Platform="Android" Value="JetBrainsMonoSemibold" />
        <On Platform="iOS" Value="JetBrainsMonoSemibold" />
        <On Platform="WinUI" Value="JetBrainsMono-Semibold.ttf#JetBrainsMono" />
    </OnPlatform>

    <Style x:Key="MaterialLabelBase" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightOnSurface}, Dark={StaticResource DarkOnSurface}}" />
    </Style>

    <Style x:Key="MaterialDisplayLarge" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialRegularFont}" />
        <Setter Property="FontSize" Value="57" />
        <Setter Property="LineHeight" Value="1.12" />
        <Setter Property="CharacterSpacing" Value="-0.25" />
    </Style>

    <Style x:Key="MaterialDisplayMedium" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialRegularFont}" />
        <Setter Property="FontSize" Value="45" />
        <Setter Property="LineHeight" Value="1.15" />
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>

    <Style x:Key="MaterialDisplaySmall" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialRegularFont}" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="LineHeight" Value="1.22" />
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>

    <Style x:Key="MaterialHeadlineLarge" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialRegularFont}" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="LineHeight" Value="1.25" />
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>

    <Style x:Key="MaterialHeadlineMedium" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialRegularFont}" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="LineHeight" Value="1.28" />
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>

    <Style x:Key="MaterialHeadlineSmall" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialRegularFont}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>

    <Style x:Key="MaterialTitleLarge" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialRegularFont}" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="LineHeight" Value="1.27" />
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>

    <Style x:Key="MaterialTitleMedium" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialMediumFont}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="CharacterSpacing" Value="0.15" />
    </Style>

    <Style x:Key="MaterialTitleSmall" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialMediumFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="1.42" />
        <Setter Property="CharacterSpacing" Value="0.1" />
    </Style>

    <Style x:Key="MaterialBodyLarge" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialRegularFont}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>

    <Style x:Key="MaterialBodyMedium" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialRegularFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="1.42" />
        <Setter Property="CharacterSpacing" Value="0.25" />
    </Style>

    <Style x:Key="MaterialBodySmall" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialRegularFont}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0.4" />
    </Style>

    <Style x:Key="MaterialLabelLarge" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialMediumFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="1.42" />
        <Setter Property="CharacterSpacing" Value="0.1" />
    </Style>

    <Style x:Key="MaterialLabelMedium" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialMediumFont}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>

    <Style x:Key="MaterialLabelSmall" TargetType="Label" BasedOn="{StaticResource MaterialLabelBase}">
        <Setter Property="FontFamily" Value="{StaticResource MaterialMediumFont}" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="LineHeight" Value="1.45" />
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>

</ResourceDictionary>