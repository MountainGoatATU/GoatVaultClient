<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GoatVaultClient_v4.ViewModels"
             x:Class="GoatVaultClient_v4.Pages.EducationDetailPage"
             x:DataType="vm:EducationDetailViewModel"
             Title="{Binding SelectedTopic.Title}">
    <Grid>
        <WebView Source="{Binding HtmlSource}" Navigating="OnWebViewNavigating" />

        <ActivityIndicator IsRunning="{Binding IsLoading}" 
                           IsVisible="{Binding IsLoading}"
                           Color="#512BD4"
                           HorizontalOptions="Center" VerticalOptions="Center"/>
    </Grid>
</ContentPage>