<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GoatVaultClient.Controls.ComponentHeader"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:GoatVaultClient.Controls"
    x:Name="this"
    x:DataType="controls:ComponentHeader">
    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
        <Label
            FontSize="16"
            Text="{Binding Title, Source={x:Reference this}}"
            TextColor="{AppThemeBinding Light={x:StaticResource LightOnSurface},
                                        Dark={x:StaticResource DarkOnSurface}}"
            VerticalTextAlignment="Center" />
        <ContentView
            Grid.Column="1"
            Margin="{StaticResource headerMargin}"
            Content="{Binding Actions, Source={x:Reference this}}"
            HorizontalOptions="End"
            VerticalOptions="Center" />

    </Grid>
</ContentView>
