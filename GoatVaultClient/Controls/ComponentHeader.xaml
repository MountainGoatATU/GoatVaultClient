<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GoatVaultClient.Controls.ComponentHeader"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:GoatVaultClient.Controls"
    xmlns:popups="clr-namespace:GoatVaultClient.Controls.Popups"
    x:Name="This">
    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
        <Label
            FontSize="16"
            Text="{Binding Title}"
            TextColor="{AppThemeBinding Light={x:StaticResource LightOnSurface},
                                        Dark={x:StaticResource DarkOnSurface}}"
            VerticalTextAlignment="Center" x:DataType="popups:PromptPopup" />
        <ContentView
            Grid.Column="1"
            Margin="{StaticResource headerMargin}"
            Content="{Binding Actions}"
            HorizontalOptions="End"
            VerticalOptions="Center" x:DataType="controls:ComponentHeader" />

    </Grid>
</ContentView>
