<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GoatVaultClient.Controls.Component"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:GoatVaultClient.Controls"
    BackgroundColor="Transparent">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Border
                Margin="{Binding BorderMargin}"
                Padding="16"
                BackgroundColor="Transparent"
                StrokeThickness="0" x:DataType="controls:Component">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="{x:StaticResource xLargeIncreased}" />
                </Border.StrokeShape>
                <!--<Border.Shadow>
                    <Shadow Brush="#80000000" Offset="0,4" Radius="8" Opacity="0.4"/>
                </Border.Shadow>-->
                <ContentPresenter />
            </Border>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
