<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage
    x:Class="GoatVaultClient.Controls.Popups.PromptPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:GoatVaultClient.Controls"
    xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
    xmlns:popups="clr-namespace:GoatVaultClient.Controls.Popups"
    x:DataType="popups:PromptPopup"
    BackgroundColor="{AppThemeBinding Light=#80000000,
                                      Dark=#B0000000}"
    CloseWhenBackgroundIsClicked="False">

    <controls:PopupTemplate
        Title="{Binding Title}"
        AcceptCommand="{Binding AcceptCommand}"
        AcceptText="{Binding AcceptText}"
        CancelCommand="{Binding CancelCommand}"
        CancelText="{Binding CancelText}"
        FrameWidth="500">
        <VerticalStackLayout>
            <Label LineBreakMode="WordWrap" Text="{Binding Body}" />
        </VerticalStackLayout>
    </controls:PopupTemplate>
</mopups:PopupPage>