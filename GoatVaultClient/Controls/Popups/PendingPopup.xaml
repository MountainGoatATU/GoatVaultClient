<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage
    x:Class="GoatVaultClient.Controls.Popups.PendingPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:GoatVaultClient.Controls"
    xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
    xmlns:popups="clr-namespace:GoatVaultClient.Controls.Popups"
    x:DataType="popups:PendingPopup"
    BackgroundColor="{AppThemeBinding Light=#80000000,
                                      Dark=#B0000000}"
    CloseWhenBackgroundIsClicked="False">
    <controls:PendingPopupTemplate Title="{Binding Title}" FrameWidth="400" />
</mopups:PopupPage>
