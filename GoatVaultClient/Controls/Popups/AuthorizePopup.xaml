<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage
    x:Class="GoatVaultClient.Controls.Popups.AuthorizePopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:GoatVaultClient.Controls"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
    xmlns:popups="clr-namespace:GoatVaultClient.Controls.Popups"
    x:DataType="popups:AuthorizePopup"
    BackgroundColor="{AppThemeBinding Light=#80000000,
                                      Dark=#B0000000}"
    CloseWhenBackgroundIsClicked="False">

    <controls:PopupTemplate
        Title="{Binding Title}"
        AcceptCommand="{Binding AcceptCommand}"
        AcceptText="Submit"
        CancelCommand="{Binding CancelCommand}"
        FrameWidth="500">
        <VerticalStackLayout>
            <material:TextField
                x:Name="InputEntry"
                Title="Enter value"
                IsPassword="True" />
        </VerticalStackLayout>
    </controls:PopupTemplate>
</mopups:PopupPage>