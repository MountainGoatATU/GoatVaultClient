<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GoatVaultClient.Controls.EntryDetailView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:GoatVaultClient.Controls"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
    xmlns:vm="clr-namespace:GoatVaultClient.ViewModels"
    xmlns:models="clr-namespace:GoatVaultCore.Models;assembly=GoatVaultCore">

    <controls:Component BorderMargin="0">
        <VerticalStackLayout Spacing="10">

            <VerticalStackLayout Margin="15" Spacing="15">

                <!--  Site  -->
                <VerticalStackLayout>
                    <Label
                        FontSize="12"
                        Text="SITE"
                        TextColor="{AppThemeBinding Light={StaticResource Gray500},
                                                    Dark={StaticResource Gray400}}" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="{Binding Site}" x:DataType="models:VaultEntry" />
                </VerticalStackLayout>

                <!--  Username  -->
                <VerticalStackLayout>
                    <Label
                        FontSize="12"
                        Text="USERNAME"
                        TextColor="{AppThemeBinding Light={StaticResource Gray500},
                                                    Dark={StaticResource Gray400}}" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="{Binding UserName}" x:DataType="models:VaultEntry" />
                </VerticalStackLayout>

                <!--  Password  -->
                <VerticalStackLayout>
                    <Label
                        FontSize="12"
                        Text="PASSWORD"
                        TextColor="{AppThemeBinding Light={StaticResource Gray500},
                                                    Dark={StaticResource Gray400}}" />
                    <Grid ColumnDefinitions="*, Auto, Auto">
                        <Label
                            Grid.Column="0"
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="{Binding Password}"
                            VerticalOptions="Center" x:DataType="models:VaultEntry">
                            <Label.Triggers>
                                <DataTrigger
                                    Binding="{Binding Path=IsPasswordVisible}"
                                    TargetType="Label"
                                    Value="False" x:DataType="vm:MainPageViewModel">
                                    <Setter Property="Text" Value="••••••••" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>

                        <controls:ImageButton
                            Grid.Column="1"
                            Command="{Binding Path=TogglePasswordVisibilityCommand}"
                            IconBgColorHover="{AppThemeBinding Light={StaticResource LightSecondaryContainer},
                                                               Dark={StaticResource DarkSecondaryContainer}}"
                            IconColor="{AppThemeBinding Light={StaticResource LightOnSecondaryContainer},
                                                        Dark={StaticResource DarkOnSecondaryContainer}}"
                            IconGlyph="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=IsPasswordVisible, Converter={StaticResource EyeIconConverter}}"
                            x:DataType="vm:MainPageViewModel" />
                        <controls:ImageButton
                            Grid.Column="2"
                            Command="{Binding Path=CopyEntryCommand}"
                            IconBgColorHover="{AppThemeBinding Light={StaticResource LightSecondaryContainer},
                                                               Dark={StaticResource DarkSecondaryContainer}}"
                            IconColor="{AppThemeBinding Light={StaticResource LightOnSecondaryContainer},
                                                        Dark={StaticResource DarkOnSecondaryContainer}}"
                            IconGlyph="{x:Static m:MaterialRounded.Content_copy}" x:DataType="vm:MainPageViewModel" />
                    </Grid>
                </VerticalStackLayout>

                <!--  MFA  -->
                <VerticalStackLayout IsVisible="{Binding HasMfa}" x:DataType="models:VaultEntry">
                    <Label
                        FontSize="12"
                        Text="MFA CODE (TOTP)"
                        TextColor="{AppThemeBinding Light={StaticResource Gray500},
                                                    Dark={StaticResource Gray400}}" />
                    <Grid ColumnDefinitions="Auto, *, Auto, Auto" ColumnSpacing="10">
                        <Label
                            Grid.Column="0"
                            FontAttributes="Bold"
                            FontFamily="JetBrainsMonoRegular"
                            FontSize="24"
                            Text="{Binding CurrentTotpCode, TargetNullValue='------'}"
                            TextColor="{AppThemeBinding Light={StaticResource Primary},
                                                        Dark={StaticResource PrimaryDark}}"
                            VerticalOptions="Center" x:DataType="models:VaultEntry" />

                        <ProgressBar
                            Grid.Column="1"
                            HeightRequest="6"
                            Progress="{Binding TotpTimeRemaining, Converter={StaticResource TimeToProgressConverter}}"
                            ProgressColor="{AppThemeBinding Light={StaticResource Primary},
                                                            Dark={StaticResource PrimaryDark}}"
                            VerticalOptions="Center" x:DataType="models:VaultEntry" />

                        <Label
                            Grid.Column="2"
                            FontSize="14"
                            Text="{Binding TotpTimeRemaining, StringFormat='{0}s'}"
                            TextColor="{AppThemeBinding Light={StaticResource Gray500},
                                                        Dark={StaticResource Gray400}}"
                            VerticalOptions="Center" x:DataType="models:VaultEntry" />

                        <controls:ImageButton
                            Grid.Column="3"
                            Command="{Binding CopyTotpCodeCommand}"
                            IconBgColorHover="{AppThemeBinding Light={StaticResource LightSecondaryContainer},
                                                               Dark={StaticResource DarkSecondaryContainer}}"
                            IconColor="{AppThemeBinding Light={StaticResource LightOnSecondaryContainer},
                                                        Dark={StaticResource DarkOnSecondaryContainer}}"
                            IconGlyph="{x:Static m:MaterialRounded.Content_copy}"
                            ToolTipProperties.Text="Copy TOTP Code" x:DataType="vm:MainPageViewModel" />
                    </Grid>
                </VerticalStackLayout>

                <!--  Category  -->
                <VerticalStackLayout>
                    <Label
                        FontSize="12"
                        Text="CATEGORY"
                        TextColor="{AppThemeBinding Light={StaticResource Gray500},
                                                    Dark={StaticResource Gray400}}" />
                    <Label FontSize="16" Text="{Binding Category}" x:DataType="models:VaultEntry" />
                </VerticalStackLayout>

                <!--  Description  -->
                <VerticalStackLayout>
                    <Label
                        FontSize="12"
                        Text="DESCRIPTION"
                        TextColor="{AppThemeBinding Light={StaticResource Gray500},
                                                    Dark={StaticResource Gray400}}" />
                    <Label FontSize="14" Text="{Binding Description}" x:DataType="models:VaultEntry" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </controls:Component>
</ContentView>