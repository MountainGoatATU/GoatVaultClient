<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="GoatVaultClient.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:GoatVaultClient.Converters"
    xmlns:m="clr-namespace:UraniumUI.Material.Resources;assembly=UraniumUI.Material"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
                    <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
                    <converters:TimeToProgressConverter x:Key="TimeToProgressConverter" />
                    <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
                    <converters:BoolToMfaStatusConverter x:Key="BoolToMfaStatusConverter" />
                    <converters:BoolToMfaButtonTextConverter x:Key="BoolToMfaButtonTextConverter" />
                    <converters:EyeIconConverter x:Key="EyeIconConverter" />
                    <converters:BoolToGoatButtonColorConverter x:Key="BoolToGoatButtonColorConverter" />
                </ResourceDictionary>
                <ResourceDictionary x:Name="appColors" Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary x:Name="appStyles" Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary x:Name="MaterialColors" Source="Resources/Styles/MaterialColors.xaml" />
                <material:StyleResource BasedOn="{x:Reference appStyles}" ColorsOverride="{x:Reference MaterialColors}" />
                <ResourceDictionary x:Name="AppTypography" Source="Resources/Styles/Typography.xaml" />
                <ResourceDictionary x:Name="AppDimens" Source="Resources/Styles/Dimens.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
